@model List<Card>

<div class="container">
    <div class="row justify-content-around">
        @foreach(var item in Model){
           <div class="col-md-4">
                <div class="card">
                    <img src="@item.Image" class="card-img-top" alt="" width="50px" height="200px">
                    <div class="card-body">
                        <h5 class="card-title">@item.Id @item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p>@item.Price</p>
                    </div>
                </div>
           </div>
            }
    </div>
</div>

